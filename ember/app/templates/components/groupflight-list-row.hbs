{{#if showDate}}
  <td class="date">
    {{#if groupflight.date}}
      {{format-date groupflight.date format="ddmmyyyy" timeZone="UTC"}}
    {{/if}}
  </td>
{{/if}}

{{#if showAirport}}
  <td class="airport">
    {{#if groupflight.takeoffAirport}}
      <XFlag @code={{groupflight.takeoffAirport.countryCode}} />
      <LinkTo @route="groupflights.airport" @model={{groupflight.takeoffAirport.id}}>{{groupflight.takeoffAirport.name}}</LinkTo>
    {{/if}}
  </td>
{{/if}}

{{#if showClub}}
  <td class="club hidden-sm hidden-xs">
    {{#if groupflight.club}}
      <LinkTo @route="club" @model={{groupflight.club.id}}>{{truncate groupflight.club.name 25}}</LinkTo>
    {{/if}}
  </td>
{{/if}}

<td class="column-buttons">
  <LinkTo @route="groupflight" @model={{groupflight.id}} class="btn btn-default btn-sm">{{t "show"}}</LinkTo>
  <PinStar @groupflightId={{groupflight.id}} />
</td>

<td class="num_comments hidden-xs">
  {{#if (gt groupflight.numComments 0)}}
    {{fa-icon "comments-o" title=(t "n-comments" numComments=groupflight.numComments)}}
  {{/if}}
</td>