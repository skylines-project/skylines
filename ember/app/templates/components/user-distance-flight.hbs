<td>{{label}}</td>
<td class="column-buttons">
  {{#if flight}}
    <abbr title={{format-date flight.flightDate format="ddmmyyyy" timeZone="UTC"}}>{{format-relative flight.flightDate}}</abbr>
    <div class="pull-right">
      <LinkTo @route="flight" @model={{flight.id}} class="btn btn-default btn-sm">{{t "show"}}</LinkTo>
    </div>
  {{/if}}
</td>
