<div ...attributes>
  <div class="panel panel-default">
    <div class="panel-body" local-class="follower-panel">
      <h4 class="media-heading">
        <LinkTo @route="user" @model={{follower.id}}>{{follower.name}}</LinkTo>
      </h4>

      <p>
        {{#if follower.club}}
          <LinkTo @route="club" @model={{follower.club.id}}>{{follower.club.name}}</LinkTo>
        {{else}}
          &nbsp;
        {{/if}}
      </p>

      {{#if account.user}}
        {{#if (eq follower.id account.user.id)}}
          <button class="btn btn-default form-control" disabled>
            {{svg-jar "ban" class="fa-svg"}}
            {{t "this-is-you"}}
          </button>
        {{else if follower.currentUserFollows}}
          <button class="btn btn-default form-control" disabled={{unfollowTask.isRunning}} {{action (perform unfollowTask)}}>
            {{svg-jar "minus" class="fa-svg"}}
            {{t "unfollow"}}
          </button>
        {{else}}
          <button class="btn btn-default form-control" disabled={{followTask.isRunning}} {{action (perform followTask)}}>
            {{svg-jar "plus" class="fa-svg"}}
            {{t "follow"}}
          </button>
        {{/if}}
      {{/if}}
    </div>
  </div>
</div>