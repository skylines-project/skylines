{{#if (and (or model.flight.pilot model.flight.pilotName) (or model.flight.copilot model.flight.copilotName))}}
  {{page-title (t "DISTANCE-on-DATE-by-PILOT-and-COPILOT"
    distance=(format-distance model.flight.distance)
    date=(format-date model.flight.scoreDate format="ddmmyyyy" timeZone="UTC")
    pilot=(or model.flight.pilot.name model.flight.pilotName)
    copilot=(or model.flight.copilot.name model.flight.copilotName))}}
{{else if (or model.flight.pilot model.flight.pilotName)}}
  {{page-title (t "DISTANCE-on-DATE-by-PILOT"
    distance=(format-distance model.flight.distance)
    date=(format-date model.flight.scoreDate format="ddmmyyyy" timeZone="UTC")
    pilot=(or model.flight.pilot.name model.flight.pilotName))}}
{{else}}
  {{page-title (t "DISTANCE-on-DATE"
    distance=(format-distance model.flight.distance)
    date=(format-date model.flight.scoreDate format="ddmmyyyy" timeZone="UTC"))}}
{{/if}}

<div class="fullscreen-below-nav-bar">
  <FlightPage
    id="fullscreen-content"
    @ids={{ids}}
    @flight={{model.flight}}
    @_primaryFlightPath={{_primaryFlightPath}}
    @comments={{model.comments}}
    @performance={{model.performance}}
    @legs={{model.contest_legs}}
    @phases={{model.phases}}
    @nearFlights={{model.near_flights}}
    @transitionTo={{action "transitionTo"}} />
</div>