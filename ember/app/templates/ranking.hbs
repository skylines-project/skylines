<BasePage>
  <div local-class="header">
    <h1>
      {{t "ranking"}}

      {{#if loading}}
        <small>{{t "loading"}}</small>
      {{/if}}
    </h1>

    <div local-class="tabs">
      <BsNav @type="tabs" as |nav|>
        <nav.item>
          <nav.linkTo @route="ranking.clubs">{{t "clubs"}}</nav.linkTo>
        </nav.item>
        <nav.item>
          <nav.linkTo @route="ranking.pilots">{{t "pilots"}}</nav.linkTo>
        </nav.item>
        <nav.item>
          <nav.linkTo @route="ranking.airports">{{t "airports"}}</nav.linkTo>
        </nav.item>
      </BsNav>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      {{outlet}}
    </div>
  </div>
</BasePage>
