<tr ...attributes>
  <td local-class="column-icon">
    {{#if (eq @result.type "user")}}
      {{svg-jar "user" class="fa-svg"}}
    {{else if (eq @result.type "club")}}
      {{svg-jar "group" class="fa-svg"}}
    {{else if (eq @result.type "airport")}}
      {{svg-jar "map-marker" class="fa-svg"}}
    {{/if}}
  </td>

  <td local-class="column-type">
    <small>
      {{#if (eq @result.type "user")}}
        {{t "pilot"}}
      {{else if (eq @result.type "club")}}
        {{t "club"}}
      {{else if (eq @result.type "airport")}}
        {{t "airport"}}
      {{/if}}
    </small>
  </td>

  <td class="column-buttons">
    {{#if (eq @result.type "user")}}
      <LinkTo @route="user" @model={{@result.id}}>{{@result.name}}</LinkTo>

    {{else if (eq @result.type "club")}}
      <LinkTo @route="club" @model={{@result.id}}>{{@result.name}}</LinkTo>

      {{#if @result.website}}
        <small>- <a href={{@result.website}} target="_blank" rel="noopener">{{@result.website}}</a></small>
      {{/if}}

    {{else if (eq @result.type "airport")}}
      <LinkTo @route="flights.airport" @model={{@result.id}}>{{@result.name}}</LinkTo>

      {{#if @result.icao}}
        <small>- {{@result.icao}}</small>
      {{/if}}

      {{#if @result.frequency}}
        <small>- {{@result.frequency}} MHz</small>
      {{/if}}
    {{/if}}

    <div class="pull-right">
      {{#if (eq @result.type "user")}}
        <LinkTo @route="flights.pilot" @model={{@result.id}} class="btn btn-default btn-sm">{{svg-jar "plane" class="fa-svg"}} {{t "flights"}}</LinkTo>
        <LinkTo @route="statistics.pilot" @model={{@result.id}} class="btn btn-default btn-sm">{{svg-jar "bar-chart" class="fa-svg"}} {{t "statistics"}}</LinkTo>

      {{else if (eq @result.type "club")}}
        <LinkTo @route="club.pilots" @model={{@result.id}} class="btn btn-default btn-sm">{{svg-jar "group" class="fa-svg"}} {{t "members"}}</LinkTo>
        <LinkTo @route="flights.club" @model={{@result.id}} class="btn btn-default btn-sm">{{svg-jar "plane" class="fa-svg"}} {{t "flights"}}</LinkTo>
        <LinkTo @route="statistics.club" @model={{@result.id}} class="btn btn-default btn-sm">{{svg-jar "bar-chart" class="fa-svg"}} {{t "statistics"}}</LinkTo>

      {{else if (eq @result.type "airport")}}
        <LinkTo @route="flights.airport" @model={{@result.id}} class="btn btn-default btn-sm">{{svg-jar "plane" class="fa-svg"}} {{t "flights"}}</LinkTo>
        <LinkTo @route="statistics.airport" @model={{@result.id}} class="btn btn-default btn-sm">{{svg-jar "bar-chart" class="fa-svg"}} {{t "statistics"}}</LinkTo>
      {{/if}}
    </div>
  </td>

</tr>