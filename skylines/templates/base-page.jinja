{% extends "base.jinja" %}
{% from 'topbar.jinja' import topbar with context %}
{% from 'macros/flash.jinja' import insert_flash_message with context %}

{% block body -%}
{{ topbar(active_page) }}

<div class="container">
    <div class="content">

        {% if self.title() -%}
        <div class="page-header">
            {%- if self.title_right() -%}
            <div class="pull-right">{%- block title_right %}{% endblock %}</div>
            {%- endif %}
            <h1>{{ self.title() }}</h1>
        </div>
        {%- endif %}

        <div class="row">
            <div class="span12">
                {{ insert_flash_message(False) }}
                {%- block content %}{% endblock %}
            </div>
        </div>
    </div>

    <p class="footer">
        {% block footer -%}
        &copy; <a href="http://www.xcsoar.org/">The XCSoar Project</a> -
        <a href="{{ config.get('skylines.imprint_link') }}">{% trans %}Imprint{% endtrans %}</a>
        {%- endblock %}
    </p>
</div>
{%- endblock %}
