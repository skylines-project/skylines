<BasePage>
  <div class="page-header">
    <h1>{{t "live-tracking"}}</h1>
  </div>

  <div class="row">
    <div class="col-md-12">
      <h3>{{t "tracking.what-is-it"}}</h3>
      <p>{{t "tracking.description"}}</p>

      <h3>{{t "tracking.clients"}}</h3>
      <ul>
        <li>
          <b>XCSoar:</b><br>
          {{t "tracking.xcsoar-description" htmlSafe=true release=(html-safe "<a href=\"http://www.xcsoar.org/download/latest.html\">XCSoar 6.4</a>")}}
          (<a href="https://play.google.com/store/apps/details?id=org.xcsoar" target="_blank" rel="noopener">Google Play</a>).
          {{t "tracking.instructions-below"}}
        </li>
        <li>
          <b>SkyLines Tracker:</b><br>
          {{t "tracking.skylines-tracker-description"}}
          (<a href="https://play.google.com/store/apps/details?id=ch.luethi.skylinestracker" target="_blank" rel="noopener">Google Play</a>)
        </li>
        <li>
          <b>{{t "tracking.lt24-clients"}}:</b><br>
          {{t "tracking.lt24-description" htmlSafe=true livetrack24=(html-safe "<a href=\"http://www.livetrack24.com/docs/wiki/LiveTracking%20API\">LiveTrack24</a>") skylines=(html-safe "<code>skylines.aero</code>")}}
        </li>
      </ul>

      <h3>{{t "live-tracking-key"}}</h3>

      {{#if model.trackingKey}}
        <p>{{t "tracking.your-live-tracking-key-is-KEY" htmlSafe=true key=(html-safe (concat "<span class=\"label tracking-key\">" model.trackingKey "</span>"))}}</p>

        <p><LinkTo @route="settings.tracking" class="btn btn-default btn-sm">{{svg-jar "cog" class="fa-svg"}} {{t "tracking.settings"}}</LinkTo></p>
      {{else}}
        <p>{{t "tracking.login-required"}}</p>
      {{/if}}

      <h3>XCSoar</h3>
      <p>{{t "tracking.xcsoar-instructions" htmlSafe=true}}</p>
    </div>
  </div>
</BasePage>