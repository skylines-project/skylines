<BasePage>
  <div class="page-header">
    <h1>{{t "live-tracking"}}</h1>
  </div>

  <div class="row">
    <div class="col-md-12">
      <TrackingTables @tracks={{model.tracks}} @friends={{model.friends}} />

      <LinkTo @route="tracking.info" class="btn btn-default">{{svg-jar "question-circle" class="fa-svg"}} {{t "how-to-use-live-tracking"}}</LinkTo>
    </div>
  </div>
</BasePage>